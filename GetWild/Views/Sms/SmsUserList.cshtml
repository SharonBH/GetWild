@model IEnumerable<InShapeModels.UserSMSSubscriptionModel>

@if (Model.Any())
{
    <div class="panel panel-info">
        <div class="panel-heading" style="height: 40px;">
            <div class="col-md-11"><h3 class="panel-title">רשימת משתמשים</h3></div>
            <div class="col-md-1">סה"כ: @Model.Count()</div>
        </div>
        <div class="panel-body">
            <div id="update-message">
            </div>
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th style="text-align: right; width: 40px;">
                        </th>
                        <th style="text-align: right;">
                        </th>
                        <th style="text-align: right;">
                            שם
                        </th>
                        <th style="text-align: right;">
                            תאריף תפוגת מנוי
                        </th>
                       <th style="text-align: right;">
                            טלפון
                        </th>

                    </tr>
                </thead>
                @{ int i = 0; }
                @foreach (var item in Model)
                {
                    i = i + 1;
                    <tr>
                        <td>
                            <h4>@i</h4></td>
                        <td>@Html.CheckBoxFor(model => model.ElementAt(i-1).Selected, new {@class = "control-label col-md-2"})</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @if (item.SubscriptionExpireDate != null)
                            {
                                @item.SubscriptionExpireDate.Value.ToShortDateString()
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                    </tr>
                }
                <tr class="info" style="text-align: right;">
                    <td>
                        סה"כ משתמשים:
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td id="cart-total">
                        @Model.Count()
                    </td>
                </tr>
            </table>
        </div>
    </div>
}