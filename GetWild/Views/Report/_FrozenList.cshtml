@model List<InShapeModels.FrozenSubscriptionModel>
<div class="row row-topbuffer">
    <div class="col-md-12 col">
        @if (Model.Any())
        {
            <div class="panel panel-info">
                @*<div class="panel-heading">
                        <h3 class="panel-title">רשימת האימונים</h3>
                    </div>*@
                <div class="panel-body">
                    <div id="update-message">
                    </div>
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th style="text-align: right;">

                                </th>
                                <th style="text-align: right;">
                                    שם
                                </th>
                                <th style="text-align: right;">
                                    תאריך הקפאה
                                </th>
                                <th style="text-align: right;">
                                    ימים
                                </th>
                                <th style="text-align: right;" colspan="2">
                                    הערה
                                </th>
                                <th style="text-align: right;">
                                    תאריך סיום
                                </th>
                                <th style="text-align: right;"></th>
                            </tr>
                        </thead>
                        @{ int i = 0; }
                        @foreach (var item in Model)
                        {
                            i = i + 1;
                            <tr class="clickable-row" data-id="@item.SubscriptionUser" style="cursor: pointer;">
                                <td>
                                    <h3>@i</h3></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserSubscription.FullName)
                                </td>
                                <td>
                                    @item.Date.ToString("dd MMMM yyyy")
                                </td>
                                <td>@item.DaysFrozen</td>
                                <td colspan="2">
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @if (item.FreezeToDate.HasValue)
                                    {
                                        @item.FreezeToDate.Value.ToString("dd MMMM yyyy")
                                    }
                                    else
                                    {
                                        <text>ללא</text>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-xs btn-danger btn_Unfreeze" data-id="@item.SubscriptionId" data-userid="@item.SubscriptionUser"><i class="glyphicon glyphicon-remove"></i> בטל הקפאה</a>
                                </td>
                            </tr>
                        }
                        <tr class="info" style="text-align: right;">
                            <td colspan="2">
                                סה"כ מנויים קפואים:
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td id="cart-total">
                                @Model.Count()
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
                            }
                            else
                            {
                                <div>
                                    <p>
                                        לא נמצאו מתאמנים לדו"ח.
                                    </p>
                                </div>
                            }
    </div>
</div>