@using InShapeModels
@using Utilities
@model GetWild.Models.ClassViewModel

<div class="courses-container">
    <div class="course @(Model.IsUserEnrolled ? " Enroll" : "") @(Model.Date < DateTime.UtcNow.ToLocal() || Model.ClassTypeId == 999 ? " Disabled" : "")" data-id="@Model.Id" style="cursor:pointer; background-color: @Model.BGColor2;">
        <div class="course-info">
            @*<div class="progress-container">
            <div class="progress"></div>
            <span class="progress-text">
                2/9 Challenges
            </span>
        </div>*@
            @*<h6>@Model.Time.Value.ToShortTimeString()</h6>*@
            <h1>@Model.Name</h1>
            <div class="row nopadding">
                
                <div class="col-md-4 col-xs-4">
                    @if (Model.IsUserEnrolled)
                    {
                        <span class="glyphicon glyphicon-ok"></span>
                    }
                    else if (Model.IsUserInWaitingList)
                    {
                        <span class="glyphicon glyphicon-time"></span>
                    }
                </div>

            </div>
            @*<button class="btn">Continue</button>*@
            <div class="row nopadding">
            <span class="badge@(string.IsNullOrEmpty(Model.SelectedPlacement) ? " hidden" : "")">@Model.SelectedPlacement</span>
            <div>@Html.Raw(Model.SpaceLeftHTML)</div>
        </div>
        </div>
        <div class="course-preview">
            <h6>סטודיו</h6>
            <h2>@Model.StudioRoomName</h2>
            <h3>@Model.Time.Value.ToShortTimeString()</h3>
            @*<a href="#">View all chapters <i class="fas fa-chevron-right"></i></a>*@
            <hr />
            <div>
                @if (Model.CurrentCompany.UseInstructors)
                {
                    foreach (var item in Model.Instructors)
                    {
                        <img src="@item.ProfileIMGPath" class="cal-img" alt="@Model.ClassInstructors" />
                    }
                }
                <div>@Model.ClassInstructors</div>
            </div>
        </div>
    </div>
</div>




