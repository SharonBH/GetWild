<script>
    jQuery(document).ready(function ($) {
        if ('@ViewBag.ShowTandC' == 'True') {
            $('#TandCModal').modal({ backdrop: 'static', keyboard: false });
        }
        //else if ('@ViewBag.ShowHealthTandC' == 'True') {
            //$('#HealthTandCModal').modal({ backdrop: 'static', keyboard: false });
        //}

        if ('@ViewBag.ShowPopup' == 'True') {
            $('#myModal .modal-title').html('הודעת מערכת');
            $('#myModal .modal-body').html('@ViewBag.PopupMSG');
            $('#myModal').modal('show', { backdrop: 'static' });
        }
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
