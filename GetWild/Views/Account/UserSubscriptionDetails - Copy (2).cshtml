@model List<GetWild.Models.SubscriptionDetailViewModel>

                @if (Model.Any())
                {
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">פירוט עידכוני מנוי</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover ">
                                <thead>
                                    <tr>
                                        <th style="text-align:right;">
                                            תאריך
                                        </th>
                                        <th style="text-align:right;">
                                            ערך
                                        </th>
                                        <th style="text-align:right;">
                                            סיבה
                                        </th>
                                        <th style="text-align:right;">
                                            ע"י
                                        </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Date.ToString("dd/MM/yy")
                                        </td>
                                        <td>
                                            @item.Value
                                        </td>
                                        <td>
                                            @item.ChangeTypes.First(x=>x.Id == item.ChangeTypeId).Name : 
                                            @item.Note
                                        </td>
                                        <td>
                                            @item.User
                                        </td>
                                    </tr>
                                }
                                <tr class="info" style="text-align:right;">
                                    <td>
                                        סה"כ עדכונים:
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td id="cart-total">
                                        @Model.Count()
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div>
                        <p>
                            לא נמצאו עידכונים למנוי.
                        </p>
                    </div>
                }


